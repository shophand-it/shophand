{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["server/controllers/*"],
      "@routes/*": ["server/routes/*"],
      "@models/*": ["server/models/*"],
      "@utils/*": ["server/utils/*"]
    },
    "outDir": "dist"
  },
  "include": ["server/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}